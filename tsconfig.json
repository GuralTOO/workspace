{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/**/*.ts",
    "src/**/**/*.tsx"
  ],
  "exclude": ["node_modules"],
  "baseUrl": ".",
  "paths": {
    "@/*": ["./src/*"]
  }
}
